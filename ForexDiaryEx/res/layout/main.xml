<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Spinner
            android:id="@+id/spPair"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:prompt="@array/pair" />

        <EditText
            android:id="@+id/etLot"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="5" >

            <requestFocus />
        </EditText>

        <ToggleButton
            android:id="@+id/tbtnBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_horizontal"
            android:layout_weight="1"
            android:textOff="@string/sell"
            android:textOn="@string/buy" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="add" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Entry" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Stop loss" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take profit" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Out price" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/etEntry"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:ems="5"
                android:inputType="numberDecimal"
                android:maxLength="6" />

            <EditText
                android:id="@+id/etSL"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:ems="5"
                android:inputType="numberDecimal"
                android:maxLength="6" />

            <EditText
                android:id="@+id/etTP"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:ems="5"
                android:inputType="numberDecimal"
                android:maxLength="6" />

            <EditText
                android:id="@+id/etOPrice"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:ems="5"
                android:inputType="numberDecimal"
                android:maxLength="6" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/lvForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>